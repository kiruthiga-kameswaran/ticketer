generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TicketSchema {
  id          Int           @id @default(autoincrement())
  title       String?
  description String?
  priority    PriorityType?
  progress    Int?
  status      StatusType?
  active      ActiveType?
  assignee    Assignee      @relation("AssignedTo",fields: [assigneeId], references: [id])
  assigneeId  Int
  createdBy   Assignee?      @relation("CreatedBy",fields: [createdById], references: [id])
  createdById Int?
  createdAt   DateTime      @default(now())
}

model Assignee {
  id           Int            @id @default(autoincrement())
  name         String?
  email        String?        @unique
  password     String?
  assignedTickets TicketSchema[] @relation("AssignedTo")
  createdTickets  TicketSchema[] @relation("CreatedBy")
}

enum PriorityType {
  Urgent
  Mid
  Low
}

enum StatusType {
  Done
  Incomplete
  Assigned
}

enum ActiveType {
  Yes
  No
}
