generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TicketSchema {
  id          Int           @id @default(autoincrement())
  title       String?
  description String?
  priority    PriorityType?
  progress    Int?
  status      StatusType?
  active      ActiveType?
  assignee    Assignee      @relation(fields: [assigneeId], references: [id])
  assigneeId  Int
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
}

model Assignee {
  id           Int            @id @default(autoincrement())
  name         String?
  email        String?        @unique
  password     String?
  TicketSchema TicketSchema[]
}

enum PriorityType {
  Urgent
  Mid
  Low
}

enum StatusType {
  Done
  Incomplete
  Assigned
}

enum ActiveType {
  Yes
  No
}
